<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.davidseptimus.paletteerintellijplugin</id>
    <name>Paletteer</name>
    <vendor>davidseptimus</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.paletteerBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="com.github.davidseptimus.paletteerintellijplugin.toolWindow.PaletteerToolWindowFactory"
                id="Paletteer"
                anchor="bottom"
                icon="AllIcons.Toolwindows.ToolWindowPalette"
        />
        <notificationGroup id="Paletteer Notifications"
                           displayType="BALLOON"
                           bundle="messages.paletteerBundle"
                           key="notification.group.paletteer.notifications"/>
    </extensions>
    <actions resource-bundle="messages.paletteerBundle">
        <action id="com.github.davidseptimus.paletteerintellijplugin.action.LookupTextAttributeAction"
                class="com.github.davidseptimus.paletteerintellijplugin.action.LookupTextAttributeAction"
        >
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut first-keystroke="alt C" keymap="$default"/>
        </action>
        <action id="com.github.davidseptimus.paletteerintellijplugin.action.CopyHighlightForegroundAction"
                class="com.github.davidseptimus.paletteerintellijplugin.action.CopyHighlightForegroundAction"
        >
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut first-keystroke="alt shift C" keymap="$default"/>
        </action>
        <action id="com.github.davidseptimus.paletteerintellijplugin.action.OpenPaletteerToolWindowAction"
                class="com.github.davidseptimus.paletteerintellijplugin.action.OpenPaletteerToolWindowAction"
        >
            <keyboard-shortcut first-keystroke="alt P" keymap="$default"/>
        </action>
    </actions>
</idea-plugin>
